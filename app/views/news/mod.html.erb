<center>
  <h1 class="mt-3">Sugerencias</h1>
  <div class="row row-cols-1 g-3 mt-2 max-width-900 align-self-center">
    <div class="btn-group my-3">
      <a href="#" class="btn btn-primary active" aria-current="page">Pendientes</a>
      <a href="/historial" class="btn btn-primary">Historial</a>
    </div>
    <% @news.each do |news| %>
      <div class="col">
        <div class="card news-card overflow-hidden ">
          <div class="row g-0 h-100">
            <div class="col-4 h-100">
              <img src="https://via.placeholder.com/400x300" class="h-100 w-100 rounded-start">
            </div>
            <div class="col-6">
              <div class="card-body h-100 text-start">
                <h5><%= news.title %></h5>
                <%= link_to news.link, news.link, class: "mb-2" %>
                <p class="mb-2"><%= news.origin.name %></p>
                <p class="mb-2"><%= news.release %></p>
                <!--<p class="mb-2"><%= news.link %></p>-->
                <!--<p class="card-text"><small class="text-primary"><%= news.release %></small></p>-->
              </div>
            </div>
            <div class="col-2">
              <div class="btn-group-vertical h-100 w-100" role="group">
                <!--<%= link_to 'Aprobar', news %>-->
                <%= link_to approve_news_path(news) , method: :patch, class: "btn btn-success d-flex align-items-center justify-content-center" do %>
                  <span>Aprobar</span>
                <% end %>
                <%= link_to news, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger d-flex align-items-center justify-content-center" do %>
                  <span>Eliminar</span>
                <% end %>
                <!--<%= link_to news, method: :get, class: "btn btn-secondary d-flex align-items-center justify-content-center" do %>
                  <span>Editar</span>
                <% end %>-->
                <!--<button type="button" class="btn btn-success" >Aprobar</button>-->
                <!--<button type="button" class="btn btn-danger">Eliminar</button>
                <button type="button" class="btn btn-secondary">Editar</button>-->
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="digg_pagination  mt-3 ">
      <%= will_paginate @news %>
    </div>
  </div>
</center>


