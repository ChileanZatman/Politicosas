<p id="notice"><%= notice %></p>
<center>
<h1>Partidos</h1>
</center>
<div class="row row-cols-1 row-cols-lg-2 g-3 mb-2 mt-3">
        <% @political_parties.each do |political_party| %>
          <div class="col">
            <div class="card news-card overflow-hidden">
              <a class="row g-0 h-100" href="/political_parties/<%= political_party.id %>" target="_blank">
                <div class="col-4">
                  <%= image_tag(political_party.picture, class: "h-100 w-100 rounded-start") %>
                </div>
                <div class="col-8">
                  <div class="card-body h-100">
                    <h5><%= political_party.name %></h5>
                    <ul class="py-2 px-3 list-unstyled politician-details-list mb-0">
                      <li>
                        <i class="bi bi-compass me-2 fs-6 pt-1"></i>
                        <p>
                          <%=  political_party.political_compass%>
                        </p>
                      </li>
                      <li>
                        <p>
                          <i class="bi bi-gear-wide me-2 fs-6 "></i>
                          <%= political_party.coalition %>
                        </p>
                      </li>
                      <li>
                        <i class="bi bi-clock-history me-2 fs-6 pe-1"></i> 
                        <p>
                          <%=  political_party.founding%>
                        </p>
                      </li>
                    </ul>
                  </div>
                </div>
              </a>
            </div>
          </div>
        <% end %>
