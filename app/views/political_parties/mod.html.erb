<h1>Political Parties</h1>
  <% if logged_in? %>
    <%= form_tag('modpartidos', method: :get) do %>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag ("Search") %>
    <% end %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Founding</th>
          <th>Political compass</th>
          <th>Coalition</th>
          <th>Founding ideology</th>
          <th>Principles</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @political_parties.each do |political_party| %>
          <tr>
            <td><%= political_party.name %></td>
            <td><%= political_party.founding %></td>
            <td><%= political_party.political_compass %></td>
            <td><%= political_party.coalition %></td>
            <td><%= political_party.founding_ideology %></td>
            <td><%= political_party.principles %></td>
            <td><%= link_to 'Show', political_party %></td>
            <td><%= link_to 'Edit', edit_political_party_path(political_party) %></td>
            <td><%= link_to 'Destroy', political_party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New Political Party', new_political_party_path %>
  <% else %>
    <% controller.redirect_to root_path %>
  <% end %>