<p id="notice"><%= notice %></p>

<center>
  <h1>Politicos</h1>
</center>
<br/>
  <% @parties.each do |party| %>
    <div class="bg-primary text-white ps-3 pt-3 rounded">
      <h2 > <%= party.name %>s</h2>
      <hr/>
    </div>
      <div class="row row-cols-1 row-cols-lg-2 g-3 mb-2">
        <% @politicians.each do |politician| %>
          <div class="col">
            <div class="card news-card overflow-hidden">
              <a class="row g-0 h-100" href="/politicians/<%= politician.id %>" target="_blank">
                <div class="col-4">
                  <%= image_tag(politician.picture, class: "h-100 w-100 rounded-start") %>
                </div>
                <div class="col-8">
                  <div class="card-body h-100">
                    <h5><%= politician.name %></h5>
                    <ul class="p-3 list-unstyled politician-details-list mb-0">
                      <li>
                        <i class="bi bi-clock-history me-2 fs-6 pe-1"></i> 
                        <p>
                          <%= ((Time.zone.now - politician.birthdate.to_time) / 1.year.seconds).floor  %> a√±os
                        </p>
                      </li>
                      <li>
                        <p>
                          <i class="bi bi-gear-wide me-2 fs-6 "></i>
                          <%= politician.position %>
                        </p>
                      </li>
                    </ul>
                  </div>
                </div>
              </a>
            </div>
          </div>
        <% end %>
      </div>
  <% end %>
  <div class="digg_pagination  mt-3 ">
    <%= will_paginate @parties %>
  </div>
  
